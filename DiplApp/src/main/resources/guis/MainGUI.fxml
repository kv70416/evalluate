<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:id="ffBox"
    style="
        -fx-background-image: url('/img/background1.jpg');
        -fx-background-size: cover;
    "
>
    <padding>
        <Insets top="12.0" bottom="12.0" right="12.0" left="12.0" />
    </padding>
    <children>
        <Text fx:id="miniTitleText"
            text="EvAlluate"
            style="
                    -fx-font-size: 20;
                    -fx-font-weight: bold;
                    -fx-font-style: italic;
                    -fx-font-family: serif;
            "
        />
        <Pane fx:id="phasePane"
            VBox.vgrow="ALWAYS"
        >
            <VBox.margin>
                <Insets top="20.0" bottom="20.0" />
            </VBox.margin>
        </Pane>
        <HBox fx:id="buttonBox"
            alignment="CENTER_RIGHT"
            spacing="8.0"
        >
            <children>
                <Button text="Export configuration..."
                    visible="false"
                    managed="false"
                />
                <Button text="Export results..."
                    visible="false"
                    managed="false"
                />
                <HBox
                    HBox.hgrow="ALWAYS"
                    alignment="CENTER_RIGHT"
                    spacing="8.0"
                >
                    <Button fx:id="backBtn" text="Back" disable="true" />
                    <Button fx:id="nextBtn" text="Continue" disable="true" />
                </HBox>
            </children>
        </HBox>
    </children>
</VBox> 